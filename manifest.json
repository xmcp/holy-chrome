{
  "manifest_version": 2,
  "minimum_chrome_version": "49",
  
  "name": "Holy Chrome",
  "description": "新标签页替换 / 后台占位符 / 自带 GOTO / Bilibili 增强",
  "version": "4.1",
  "icons": {
    "48": "icon-48.png"
  },
  "permissions": [
    "background",
    "tabs"
  ],
  
  "chrome_url_overrides" : {
    "newtab": "blank.html"
  },
  "omnibox": {"keyword": "\\"},
  
  "background": {
    "scripts": ["goto.js"]
  },
  "content_scripts": [
    {
        "matches": [
            "*://www.bilibili.com/video/*",
            "*://bangumi.bilibili.com/*"
        ], "js": [
            "jquery-3.2.1.min.js",
            "bilibili-quickdo.user.js"
        ], "run_at": "document_end"
    }
  ],
  
  "options_page": "options/options.html"
}